" An example for a vimrc file.
"
" First Version:	Bram Moolenaar <Bram@vim.org>
" First Version changed:	2002 May 28
" {{ ansible_managed }}, local changes will be lost!
" Adapted by {{ ids.name }} ({{ ids.email }})
"

set termencoding=utf8
set encoding=utf8
set nocompatible
set backspace=indent,eol,start
set linespace=0
set history=1000	" keep one thousand lines of command line history
set ruler		" show the cursor position all the time
set showcmd		" display incomplete commands
set showmatch
set incsearch		" do incremental searching
set smartcase 		" upper-case sensitive search
set mouse=
set smartindent
set smarttab
set tabstop=4 softtabstop=0 expandtab shiftwidth=4 smarttab
set magic
set bs=indent,eol,start
set viminfo='20,\"500
set guicursor=a:blinkon0 " do not blink cursor
colorscheme darkblue
set background=dark
set guifont=ProFont\ 8
set visualbell
set noerrorbells
set laststatus=2
set showmode
